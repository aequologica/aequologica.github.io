try {
  var _si_refresh=false;
  var _tmp_temps_avant_refresh=false;
  document.addEventListener('DOMContentLoaded', function() {

	try {
      if($('.article-video').length) {
        //console.log('pas de rechargement sur les pages avec vidéo');
      } else if(_temps_avant_refresh) {



        function check_refresh(){
          _tmp_temps_avant_refresh=_temps_avant_refresh * 60;
          //console.log('Temps avant rechargement de la page: '+_tmp_temps_avant_refresh+' secondes');
          _si_refresh = setInterval(function(){
            if('id' in PAGE_DATA) {
                    _cv('Resfresh des pages','rechargement',PAGE_DATA.id); 
            } else {
                    _cv('Resfresh des pages','rechargement','home'); 
            }
            setTimeout("document.location.href = ''+document.location.href;",1000);
          },_temps_avant_refresh * 60 * 1000);
        }


        check_refresh();
        $(window).scroll(function(){
          clearInterval(_si_refresh);
          check_refresh();
        });
        $('body').on('click',function(){
          clearInterval(_si_refresh);
          check_refresh();
        });
        setInterval(function(){
          _tmp_temps_avant_refresh = _tmp_temps_avant_refresh-10;
          //console.log('Rechargement dans '+_tmp_temps_avant_refresh+' secondes si aucune activité n\'est détectée');
        },10000);

      }
	} catch(e) {}
  });
} catch(e) {}